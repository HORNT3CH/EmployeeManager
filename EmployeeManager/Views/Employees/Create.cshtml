@model Employee

<h1>Add New Employee</h1>

<form asp-action="Create">
    <div>
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" />
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" />
    </div>
    <div>
        <label for="DepartmentId">Department</label>
        <select id="DepartmentId" asp-for="DepartmentId" asp-items="ViewBag.DepartmentId"></select>
    </div>
    <div>
        <label for="PositionId">Position</label>
        <select id="PositionId" asp-for="PositionId" asp-items="ViewBag.PositionId"></select>
    </div>
    <div>
        <label for="HoursWorked">Hours Worked</label>
        <input type="number" id="HoursWorked" name="HoursWorked" />
    </div>
    <div>
        <label for="WorkDate">Work Date</label>
        <input type="date" id="WorkDate" name="WorkDate" />
    </div>
    <button type="submit">Save</button>
</form>
